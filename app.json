{
  "expo": {
    "name": "CozyMeals",
    "slug": "CozyMeals",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/Images/CozyMealsLogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#A9744C"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
                "NSLocationWhenInUseUsageDescription": "We need your location to show your position on the map."
            }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/Images/CozyMealsLogo.png",
        "backgroundColor": "#A9744C"
      },
      "permissions": ["ACCESS_FINE_LOCATION"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font"
    ]
  }
}
